<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:backgroundTint="?colorOnSecondary"
    app:cardBackgroundColor="?colorOnPrimary"
    app:cardCornerRadius="@dimen/corner_radius">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_base_image"
            android:layout_width="@dimen/image_small_size"
            android:layout_height="@dimen/image_small_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_low"
            tools:src="@drawable/image" />

        <TextView
            android:id="@+id/item_base_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_low"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary"
            android:textSize="@dimen/text_low_size"
            android:textStyle="bold"
            tools:text="Elvina Gafieva" />

        <TextView
            android:id="@+id/item_base_character_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_low"
            android:layout_marginEnd="@dimen/margin_low"
            android:layout_marginBottom="@dimen/margin_low"
            android:textAlignment="center"
            android:textColor="?colorOnPrimary"
            android:textSize="@dimen/text_small_size"
            tools:text="Elvina Gafieva" />
    </LinearLayout>
</androidx.cardview.widget.CardView>